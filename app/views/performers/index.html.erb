<h2 class="text-center">Performers Around You</h2>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
  <td>Name</td>
  <td>Description</td>
  <td>View</td>
</tr>
</thead>
<tbody>
<% @performers.try :each do |performer| %>
  <tr>
    <td><%= performer.name %></td>
    <td><%= performer.description %></td>
    <td><%= link_to "View Listing", performer_path(performer) %></td>
  </tr>
<% end -%>
<tbody>
</table>
